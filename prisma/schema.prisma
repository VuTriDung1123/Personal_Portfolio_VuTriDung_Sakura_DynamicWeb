// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  tag       String?
  language  String   @default("vi")
  images    String   @default("[]")
  createdAt DateTime @default(now())
}

// [ĐỔI TÊN Ở ĐÂY]
model PageSection {
  id          String   @id @default(uuid())
  sectionKey  String   @unique 
  contentEn   String   @db.Text
  contentVi   String   @db.Text
  contentJp   String   @db.Text
  updatedAt   DateTime @updatedAt
}
model SectionContent {
  id        String   @id @default(cuid())
  sectionKey String  @unique // Ví dụ: "hero", "about", "contact"
  contentEn String?  @db.Text // Nội dung tiếng Anh (Lưu JSON)
  contentVi String?  @db.Text // Nội dung tiếng Việt (Lưu JSON)
  contentJp String?  @db.Text // Nội dung tiếng Nhật (Lưu JSON)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}